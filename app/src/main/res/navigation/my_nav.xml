<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.tp1.room.fragments.list.ListFragment"
        android:label="Lista"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_listFragment_to_addFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/action_listFragment_to_update2"
            app:destination="@id/update" />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.tp1.room.fragments.add.AddFragment"
        android:label="add"
        tools:layout="@layout/fragment_add">
        <action
            android:id="@+id/action_addFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
    <fragment
        android:id="@+id/update"
        android:name="com.tp1.room.fragments.update.Update"
        android:label="Update"
        tools:layout="@layout/fragment_update">
        <argument
            android:name="currentUser"
            app:argType="com.tp1.room.database.models.Usuario" />
        <action
            android:id="@+id/action_update_to_listFragment2"
            app:destination="@id/listFragment" />
    </fragment>
</navigation>